{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "all": true,
        "useExplicitType": "off",
        "useConsistentCurlyBraces": "off",
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {}
        }
      },
      "style": {
        "noImplicitBoolean": "off",
        "noDefaultExport": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "noConsole": "off"
      },
      "a11y": {},
      "complexity": {},
      "correctness": {
        "noUndeclaredVariables": "off"
      },
      "performance": {}
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}